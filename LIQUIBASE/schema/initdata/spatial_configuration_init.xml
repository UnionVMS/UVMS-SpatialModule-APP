<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:spatial="http://www.liquibase.org/xml/ns/dbchangelog-ext/liquibase-spatial"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog-ext/liquibase-spatial 
      http://lonnyj.github.com/liquibase-spatial/liquibase-spatial.xsd">

	<changeSet author="kopyczmi" id="1435921561379-1">
		<insert tableName="spatial_configuration">
			<column name="property_name" value="dateFormat" />
			<column name="prop_value" value="dd/MM/yyyy" />
			<column name="prop_validator" />
			<column name="comments" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="timeFormat" />
			<column name="prop_value" value="hh:mm:ss.SSS a" />
			<column name="prop_validator" />
			<column name="comments" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="timezone" />
			<column name="prop_value" value="hours &gt; 0 ? GMT+%d:%02d : GMT%d:%02d" />
			<column name="prop_validator" />
			<column name="comments"
				value="Please find better way to achieve it. It is that realy necessary here?" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="displayCRS" />
			<column name="prop_value" value="4326" />
			<column name="prop_validator" />
			<column name="comments" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="id" valueNumeric="5" />
			<column name="property_name" value="defaultCRSFormat" />
			<column name="prop_value" value="d.dd|dd mm.mm|dd mm ss.ss" />
			<column name="prop_validator" />
			<column name="comments"
				value="We need to specify java validator since it depends on the dsiplayCRS property" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="scalebarUnits" />
			<column name="prop_value" value="meter|km|mile|nautical mile" />
			<column name="prop_validator" />
			<column name="comments"
				value="Maybe this could be a Java enum and we can add validator as well?" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="measurementUnit" />
			<column name="prop_value" value="meter|km|mile|nautical mile" />
			<column name="prop_validator" />
			<column name="comments"
				value="Maybe this could be a Java enum and we can add validator as well?" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="autoRefreshStatus" />
			<column name="prop_value" value="on|off" />
			<column name="prop_validator" />
			<column name="comments" value="Or maybe true and false?" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="autorefreshRate" />
			<column name="prop_value" value="10000" />
			<column name="prop_validator" />
			<column name="comments" value="This is in miliseconds" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="vmsStyle" />
			<column name="prop_value" />
			<column name="prop_validator" />
			<column name="comments"
				value="Once generated by the front-end, we can add it as a default system value" />
		</insert>
		<insert tableName="spatial_configuration">
			<column name="property_name" value="defaultReport" />
			<column name="prop_value" />
			<column name="prop_validator" />
			<column name="comments"
				value="Default report preference, where the user keeps his default report name or ID. Should be stored in USM - not here" />
		</insert>
	</changeSet>
</databaseChangeLog>
