<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>${project.parent.artifactId}-module-${database.dialect}</artifactId>
    <name>${project.parent.artifactId}-module</name>
    <packaging>ear</packaging>

    <parent>
        <groupId>eu.europa.ec.fisheries.uvms.spatial</groupId>
        <artifactId>spatial</artifactId>
        <version>0.5.6.presweden2</version>
    </parent> 

    <build>
        <finalName>${project.name}</finalName>
        <plugins>
            <!-- This configuration specifies what ends up in application.xml -->
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.7</version>
                <configuration>
                    <modules>
                        <ejbModule>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>message</artifactId>
                        </ejbModule>
                        <ejbModule>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>service</artifactId>
                        </ejbModule>
                        <ejbModule>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>spatial-model</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>${project.groupId}</groupId>
                            <context-root>${project.parent.artifactId}</context-root>
                            <artifactId>rest</artifactId>
                        </webModule>
                    </modules>
                    <skinnyWars>true</skinnyWars>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-source-plugin</artifactId>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-javadoc-plugin</artifactId>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>eu.europa.ec.fisheries.uvms</groupId>
            <artifactId>usm4uvms</artifactId>
            <version>${usm4uvms.version}</version>
        </dependency>
        <dependency>
            <groupId>eu.europa.ec.fisheries.uvms</groupId>
            <artifactId>uvms-commons</artifactId>
            <version>${uvms.commons.version}</version>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>message</artifactId>
            <version>${project.parent.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>service</artifactId>
            <version>${project.parent.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>spatial-model</artifactId>
            <version>${spatial.model}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <groupId>${project.groupId}</groupId>
            <artifactId>rest</artifactId>
            <version>${project.parent.version}</version>
            <type>war</type>
        </dependency>
    </dependencies>

    <!-- USE following command to run this profile: mvn clean install -P wildfly-deploy wildfly:deploy -Dhostname=127.0.0.1 -Dport=9990 -Dusername=wildfly -Dpassword=password  -->
    <profiles>
        <profile>
            <id>wildfly-deploy</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.wildfly.plugins</groupId>
                        <artifactId>wildfly-maven-plugin</artifactId>
                        <version>1.1.0.Alpha11</version>
                        <executions>
                            <!-- Undeploy the application on clean -->
		                    <execution>
		                        <id>undeploy</id>
		                        <phase>clean</phase>
		                        <goals>
		                            <goal>undeploy</goal>
		                        </goals>
		                        <configuration>
		                            <ignoreMissingDeployment>true</ignoreMissingDeployment>
		                        </configuration>
                    		</execution>
                    		<execution>
		                        <id>deploy</id>
		                        <phase>install</phase>
		                        <goals>
		                            <goal>deploy</goal>
		                        </goals>
                    		</execution>
                        </executions>
                        <configuration>
                            <filename>${project.build.finalName}.${project.packaging}</filename>
                            <targetDir>${project.build.directory}</targetDir>
                            <hostname>${hostname}</hostname>
                            <port>${port}</port>
                            <username>${username}</username>
                            <password>${password}</password>
                            <force>true</force>
                        </configuration>
                    </plugin>
                    <plugin>
                        <groupId>org.pitest</groupId>
                        <artifactId>pitest-maven</artifactId>
                        <version>1.1.10</version>
                        <configuration>
                            <!-- we want to skip for this module -->
                            <skip>true</skip>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
		
    <profile>
            <id>weblogic</id>
				<properties>
					<database.dialect>oracle</database.dialect> <!-- the record -->
				</properties>				
			<dependencies>			
				<dependency>
					<groupId>eu.europa.ec.fisheries.uvms</groupId>
					<artifactId>usm4uvms</artifactId>
					<version>${usm4uvms.version}</version>
					<classifier>weblogic</classifier>		   					
				</dependency>
			</dependencies>
			
            <build>
                <plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-ear-plugin</artifactId>
						<version>2.7</version>
						<configuration>
							<defaultLibBundleDir>APP-INF/lib</defaultLibBundleDir>					
							<skinnyWars>true</skinnyWars>							
							<modules>
							 <ejbModule>
									<groupId>${project.groupId}</groupId>
									<artifactId>spatial-model</artifactId>
									<bundleDir>APP-INF/lib</bundleDir>							
								</ejbModule>
							   <jarModule>
									<groupId>eu.europa.ec.fisheries.uvms</groupId>
									<artifactId>usm4uvms</artifactId>		   
									<classifier>weblogic</classifier>		   
									
									<bundleDir>/</bundleDir>					
								</jarModule>						
							   <jarModule>
									<groupId>eu.europa.ec.mare.usm</groupId>
									<artifactId>jwt-handler-impl</artifactId>
									<bundleDir>/</bundleDir>					
								</jarModule>						
							</modules>
						</configuration>
						<executions>
							<execution>
								<id>weblogic-class</id>
								<phase>package</phase>
								<goals>
									<goal>ear</goal>
								</goals>
								<configuration>
									<classifier>weblogic</classifier>
								</configuration>
							</execution>
						</executions>							
					</plugin>
					
				
				  
				  <plugin>
                      <groupId>eu.europa.ec.fisheries.uvms.containerconversion</groupId>
                      <artifactId>uvms-wildfly-weblogic-convertor</artifactId>
                      <version>${uvms-wildfly-weblogic-convertor}</version>
                      <executions>
					  <execution>
						<phase>package</phase>
						<goals>
						  <goal>convertSpatialEAR</goal>
						</goals>
					  </execution>
					</executions>
				  </plugin>	
					
					
                </plugins>
            </build>

        </profile>	
					
    </profiles>

</project>
