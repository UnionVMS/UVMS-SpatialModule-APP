<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">


    <persistence-unit name="spatialConfig" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>jdbc/uvms_config</jta-data-source>
        <class>eu.europa.ec.fisheries.uvms.config.service.entity.Parameter</class>
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>

    <persistence-unit name="spatialPUpostgres" transaction-type="JTA">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <jta-data-source>java:jboss/datasources/uvms_spatial</jta-data-source>
        <properties>
            <property name="hibernate.dialect" value="${hibernate.spatial.dialect}"/>
            <property name="hibernate.default_schema" value="spatial"/>
            <property name="show_sql" value="false" />
            <property name="format_sql" value="false" />
            <property name="use_sql_comments" value="true" />
            <property name="hibernate.jpa.compliance.global_id_generators" value="false" />
        </properties>
    </persistence-unit>


    <persistence-unit name="spatialPUoracle" transaction-type="JTA">
	<!--<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	<jta-data-source>jdbc/uvms_spatial</jta-data-source> -->
